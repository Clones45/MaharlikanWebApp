{
  "name": "maharlikan-admin-desktop",
  "version": "1.2.1",
  "description": "Maharlikan AssuredLife â€” Admin Desktop App",
  "author": "Clyde Granada",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "package": "npx electron-builder -w nsis",
    "portable": "npx electron-builder --win portable",
    "release": "npx electron-builder -w nsis --publish always"
  },
  "build": {
    "appId": "com.maharlikan.admin",
    "productName": "Maharlikan Admin",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "renderer/**/*",
      "assets/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Maharlikan Admin",
      "uninstallDisplayName": "Maharlikan Admin",
      "artifactName": "Maharlikan_Admin_Setup_${version}.exe"
    },
    "artifactName": "Maharlikan_Admin_${version}_${arch}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "Clones45",
        "repo": "MaharlikanWebApp"
      }
    ]
  },
  "devDependencies": {
    "electron": "30.5.1",
    "electron-builder": "26.0.12"
  },
  "dependencies": {
    "dotenv": "17.2.3",
    "electron-updater": "^6.6.2"
  }
}
